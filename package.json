{
  "name": "stackfield-linux-client",
  "version": "1.0.0",
  "description": "A lightweight Electron desktop app for Stackfield",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/platis-software-studio/stackfield-linux-client.git"
  },
  "keywords": [
    "stackfield",
    "electron",
    "desktop",
    "notifications",
    "system-tray",
    "messaging"
  ],
  "author": "PLATIS GmbH <info@platis.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/platis-software-studio/stackfield-linux-client/issues"
  },
  "homepage": "https://github.com/platis-software-studio/stackfield-linux-client#readme",
  "dependencies": {
    "electron": "^latest"
  },
  "devDependencies": {
    "electron-builder": "^latest"
  },
  "build": {
    "appId": "com.platis-software-studio.stackfield-Linux-Client",
    "productName": "Stackfield Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "icon.png",
      "icon-alert.png",
      "package.json"
    ],
    "mac": {
      "icon": "icon.png",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "icon.png",
      "category": "Office"
    }
  }
}